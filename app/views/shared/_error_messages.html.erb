<% if product.errors.any? %>
  <div class="alert alert-danger col-10">
    <ul>
      <% product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% elsif flash[:error].present? %>
  <div class="alert alert-danger col-10">
    <%= flash[:error] %>
  </div>
<% end %>
