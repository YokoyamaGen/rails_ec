<div class="container mt-5 mb-5">
  <div class=”row”>
    <%= render partial: 'shared/flash' %>
    <div class="d-flex justify-content-between">
      <h1 class="my-3 fs-2">商品一覧
      </h1>
      <%= link_to "新規登録", new_admin_product_path, class: 'btn btn-primary mb-3 d-flex align-items-center' %>
    </div>
    <div class="col-12">
      <table class="table table-hover">
        <thead class="bg-primary text-white">
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>値段</th>
            <th>説明</th>
            <th>分類</th>
            <th>作成日</th>
            <th>更新日</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.name %></td>
              <td><%= number_to_currency(product.price) %></td>
              <td><%= product.description %></td>
              <td><%= product.category %></td>
              <td class="text-nowrap"><%= product.created_at.to_fs(:datetime_jp) %></td>
              <td class="text-nowrap"><%= product.updated_at.to_fs(:datetime_jp) %></td>
              <td><%= link_to "編集", edit_admin_product_path(product), class: 'btn btn-primary text-nowrap' %></td>
              <td><%= link_to "削除", admin_product_path(product), data: { turbo_method: :delete, turbo_confirm: '商品を削除します。よろしいですか？' }, class: 'btn btn-danger text-nowrap' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
